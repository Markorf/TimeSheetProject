@model TimeSheet.PL.WebApplication.ViewModels.Shared.NavbarViewModel
<nav>
    <ul class="menu">
        @foreach (var navItem in Model.ItemsList)
            {
            <li>@Html.ActionLink(Model.GetNavItemName(navItem), "index", navItem.ToString(), null, new { @class = navItem == Model.ActiveItem ? "btn nav active" : "btn nav" })</li>
        }

    </ul>
    <div class="mobile-menu">
        <a href="javascript:;" class="menu-btn">
            <i class="zmdi zmdi-menu"></i>
        </a>
        <ul>
            @foreach (var navItem in Model.ItemsList)
            {
                <li>@Html.ActionLink(Model.GetNavItemName(navItem), "index", navItem.ToString(), null, new { @class = navItem == Model.ActiveItem ? "btn nav active" : "btn nav" })</li>
            }
        </ul>
    </div>
    <span class="line"></span>
</nav>
